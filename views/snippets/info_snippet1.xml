<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_snippets" inherit_id="website.snippets" name="Custom Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">Krushal's Dynamic Template</div>
                <div class="o_panel_body">
                    <t t-snippet="school_management.school_info"
                        t-thumbnail="/school_management/static/src/img/snippets/explore-school.svg">
                        <keywords>explore, school</keywords>
                    </t>
                    <t t-snippet="school_management.static_school_info"
                        t-thumbnail="/school_management/static/description/school.png">
                        <keywords>explore, school</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>


